@model Unilib.Frontend.Models.ContentModel

@{
    ViewBag.Title = "Upload";
}

<h2>Upload</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Upload", "Content", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>ContentModel</legend>

        <p>
        <div class="editor-label">
            @Html.LabelFor(model => model.DataType)
        </div>
        <div class="editor-field">
            @Html.ListBoxFor(model => model.SelectedList, new SelectList(Model.DataType, "Id", "Title"))
            @Html.ValidationMessageFor(model => model.DataType)
        </div>
        </p>

        <p>
        <div class="editor-label">
            @Html.LabelFor(model => model.ContentFile)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(model => model.ContentFile, new { type = "file" })
            @Html.ValidationMessageFor(model => model.ContentFile)
        </div>
        </p>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
